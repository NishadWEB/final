<%- include('../headers/preloginheader') %>
<main class="container">
  <h2>Patient Chats</h2>
  <% if (!patients || patients.length === 0) { %>
    <p>No patient chats yet.</p>
  <% } else { %>
    <ul>
      <% patients.forEach(p => { %>
        <li>
          <a href="/doctor/chats/<%= p.patientId %>">Patient: <%= p.patientId %></a>
          - Messages: <%= p.count %>
          <% if (p.lastAt) { %>
            - Last: <%= new Date(p.lastAt).toLocaleString() %>
          <% } %>
          <div><small><%= p.lastMessage %></small></div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</main>
<%- include('../main/footer') %>
