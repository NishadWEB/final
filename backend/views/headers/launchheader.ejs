<style>
/* Sign Up Dropdown Styles */
.signup-dropdown {
    position: relative;
    display: inline-block;
}

.signup-trigger {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
}

.signup-dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    right: 0;
    background: var(--bg-lighter);
    border-radius: 12px;
    padding: 20px;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border-color);
    z-index: 1000;
    min-width: 280px;
    margin-top: 10px;
    animation: fadeInUp 0.3s ease;
}

.signup-dropdown-menu.show {
    display: block;
}

.signup-option-header {
    text-align: center;
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--border-color);
}

.signup-option-header h4 {
    color: var(--text-lighter);
    margin-bottom: 5px;
    font-size: 1.1rem;
    font-weight: 600;
}

.signup-option-header p {
    color: var(--text-dark);
    font-size: 0.8rem;
    margin: 0;
}

.signup-options {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.signup-option-btn {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 15px;
    border-radius: 8px;
    text-decoration: none;
    color: var(--text-light);
    transition: all 0.3s ease;
    border: 1px solid transparent;
    background: var(--bg-dark);
}

.signup-option-btn:hover {
    background: rgba(59, 130, 246, 0.1);
    border-color: var(--medical-blue);
    transform: translateY(-2px);
    box-shadow: var(--shadow-medical);
}

.signup-option-icon {
    font-size: 1.5rem;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-darker);
    border-radius: 8px;
    flex-shrink: 0;
}

.signup-option-text {
    display: flex;
    flex-direction: column;
    text-align: left;
}

.signup-option-text strong {
    color: var(--text-lighter);
    font-weight: 600;
    font-size: 0.9rem;
}

.signup-option-text span {
    font-size: 0.75rem;
    color: var(--text-dark);
    margin-top: 2px;
}

/* Dropdown animation */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Mobile responsiveness */
@media (max-width: 768px) {
    .signup-dropdown-menu {
        right: -50px;
        min-width: 250px;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const signupTrigger = document.querySelector('.signup-trigger');
    const signupDropdown = document.querySelector('.signup-dropdown-menu');
    
    if (signupTrigger && signupDropdown) {
        // Toggle dropdown on click
        signupTrigger.addEventListener('click', function(e) {
            e.stopPropagation();
            signupDropdown.classList.toggle('show');
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!signupTrigger.contains(e.target) && !signupDropdown.contains(e.target)) {
                signupDropdown.classList.remove('show');
            }
        });
        
        // Close dropdown when an option is selected
        const signupOptions = document.querySelectorAll('.signup-option-btn');
        signupOptions.forEach(option => {
            option.addEventListener('click', function() {
                signupDropdown.classList.remove('show');
            });
        });
        
        // Close dropdown on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                signupDropdown.classList.remove('show');
            }
        });
    }
});
</script>