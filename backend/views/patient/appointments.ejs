<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Appointments - MediDiag</title>
    <link rel="stylesheet" href="/main/main.css">
    <link rel="stylesheet" href="/navbar/navbar.css">
</head>
<body>
    <%- include('../headers/preloginheader') %>
    
    <div class="container patient-dashboard">
        <div class="dashboard-grid">
            <aside class="sidebar">
                <nav class="sidebar-nav">
                    <ul>
                        <li><a href="/patient/dashboard">Dashboard</a></li>
                        <li><a href="/patient/doctors">Find Doctors</a></li>
                        <li><a href="/patient/appointments" class="active">My Appointments</a></li>
                        <li><a href="/patient/profile">Profile</a></li>
                        <li><a href="/auth/logout">Logout</a></li>
                    </ul>
                </nav>
            </aside>

            <main class="dashboard-content">
                <h1>My Appointments</h1>
                
                <div class="appointments-list">
                    <% if (appointments.length > 0) { %>
                        <% appointments.forEach(appointment => { %>
                            <div class="card appointment-card">
                                <div class="appointment-header">
                                    <div>
                                        <h3>Dr. <%= appointment.doctor_name %></h3>
                                        <p class="specialization"><%= appointment.specialization %></p>
                                    </div>
                                    <div class="appointment-status status-<%= appointment.status %>">
                                        <%= appointment.status %>
                                    </div>
                                </div>
                                
                                <div class="appointment-details">
                                    <p><strong>Date & Time:</strong> <%= new Date(appointment.appointment_date).toLocaleString() %></p>
                                    <p><strong>Symptoms:</strong> <%= appointment.symptoms %></p>
                                    <% if (appointment.preliminary_diagnosis) { %>
                                        <p><strong>Preliminary Diagnosis:</strong> <%= appointment.preliminary_diagnosis %></p>
                                    <% } %>
                                    <% if (appointment.doctor_notes) { %>
                                        <p><strong>Doctor Notes:</strong> <%= appointment.doctor_notes %></p>
                                    <% } %>
                                    <% if (appointment.prescription) { %>
                                        <div class="prescription">
                                            <strong>Prescription:</strong>
                                            <pre><%= appointment.prescription %></pre>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <% if (appointment.status === 'scheduled') { %>
                                    <div class="appointment-actions">
                                        <button class="btn btn-outline cancel-btn" data-appointment-id="<%= appointment.id %>">Cancel Appointment</button>
                                        <button class="btn btn-primary reschedule-btn" data-appointment-id="<%= appointment.id %>">Reschedule</button>
                                    </div>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="card" style="text-align: center; padding: 60px 40px;">
                            <h3>No Appointments Yet</h3>
                            <p>You haven't booked any appointments yet.</p>
                            <a href="/patient/doctors" class="btn btn-primary">Find Doctors</a>
                        </div>
                    <% } %>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Attach handlers to buttons using data-appointment-id to avoid inline EJS in onclick attributes
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.cancel-btn').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var appointmentId = this.getAttribute('data-appointment-id');
                    if (confirm('Are you sure you want to cancel this appointment?')) {
                        // In real app, make API call to cancel appointment
                        alert('Appointment cancellation feature would be implemented here for id: ' + appointmentId);
                    }
                });
            });

            document.querySelectorAll('.reschedule-btn').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var appointmentId = this.getAttribute('data-appointment-id');
                    // In real app, open rescheduling modal
                    alert('Rescheduling feature would be implemented here for id: ' + appointmentId);
                });
            });
        });
    </script>
</body>
</html>